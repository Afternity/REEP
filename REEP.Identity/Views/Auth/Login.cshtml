@using REEP.Identity.Models.ViewModels;
@model LoginViewModel

<head>
    <link href="@Url.Content("~/styles/app.css")" rel="stylesheet" type="text/css" />
</head>

<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="header">Login</div>
    <div class="block">
        <label>Username</label>
        <input asp-for="Username" class="input" />
        <span asp-validation-fo="Username"></span>
    </div>
    <div class="block">
        <label>Password</label>
        <input asp-for="Password" type="password" class="input" />
        <span asp-validation-fo="Password"></span>
    </div>
    <div class="block">
        <button type="submit" class="button">Sign In</button>
    </div>
</form>
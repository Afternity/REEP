<Window x:Class="REEP.WPF_Client.Frontend.Views.UserViews.CreateUserWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.UserViews"
        mc:Ignorable="d"
        Title="CreateUserWindowView" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2D2D30" CornerRadius="5" Padding="10">
            <Grid>
                <TextBlock Text="Создание нового пользователя" 
                         Foreground="White"
                         FontSize="16"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Выход" 
                            Command="{Binding CloseCreateUserWindowCommand}"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма ввода -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
            <StackPanel>
                <TextBlock Text="Основная информация" FontWeight="Bold"/>
                <Separator Margin="0,0,0,10"/>

                <TextBlock Text="Имя*"/>
                <TextBox Text="{Binding SelectedUser.FirstName}"/>

                <TextBlock Text="Фамилия*"/>
                <TextBox Text="{Binding SelectedUser.SecondName}"/>

                <TextBlock Text="Отчество"/>
                <TextBox Text="{Binding SelectedUser.LastName}"/>

                <TextBlock Text="Тип пользователя*"/>
                <TextBox Text="{Binding SelectedUser.Type}"/>

                <TextBlock Text="Контактная информация" FontWeight="Bold" Margin="0,15,0,0"/>
                <Separator Margin="0,0,0,10"/>

                <TextBlock Text="Email*"/>
                <TextBox Text="{Binding SelectedUser.Email}"/>

                <TextBlock Text="Другие контакты"/>
                <TextBox Text="{Binding SelectedUser.OtherContacts}" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>

                <TextBlock Text="Безопасность" FontWeight="Bold" Margin="0,15,0,0"/>
                <Separator Margin="0,0,0,10"/>

                <TextBlock Text="Пароль*"/>
                <TextBox Text="{Binding SelectedUser.Password}" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать" 
                    Command="{Binding CreateUserCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#FF007ACC"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>

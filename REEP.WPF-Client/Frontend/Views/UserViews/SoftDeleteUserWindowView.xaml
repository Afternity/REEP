<Window x:Class="REEP.WPF_Client.Frontend.Views.UserViews.SoftDeleteUserWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.UserViews"
        mc:Ignorable="d"
        Title="SoftDeleteUserWindowView" Height="370" Width="500">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <Grid>
                <TextBlock Text="Мягкое удаление пользователя" 
                   Foreground="White"
                   FontSize="16"
                   VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Выход" 
                Command="{Binding CloseSoftDeleteUserWindowCommand}"
                HorizontalAlignment="Right"
                Padding="10 5" Margin="5"
                Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Детали пользователя -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
            <StackPanel>
                <StackPanel DataContext="{Binding SelectedUser}">
                    <TextBlock Text="Информация о пользователе" 
                          FontWeight="Bold" 
                          FontSize="15"
                          Margin="0,0,0,10"/>
                    <Separator/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Имя:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName}" IsReadOnly="True"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SecondName}" IsReadOnly="True"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email}" IsReadOnly="True"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Текущий статус:"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                            Text="{Binding IsDeleted, StringFormat='(удалён/активен): {0}'}" IsReadOnly="True"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Новый статус:"/>
                        <CheckBox Grid.Row="4" Grid.Column="1" 
                             Content="Пометить как удалённого"
                             IsChecked="{Binding IsDeleted}"
                             Margin="0,5"/>
                    </Grid>

                </StackPanel>
                <Button Content="Обновить"
                     Command="{Binding SoftDeleteUserCommand}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

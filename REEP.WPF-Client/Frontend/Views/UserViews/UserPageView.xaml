<Page x:Class="REEP.WPF_Client.Frontend.Views.UserViews.UserPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.UserViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPageView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Удалённые или не удалённый:"
                   Margin="10 0 0 0" />
        <CheckBox Grid.Row="0" Grid.Column="1" 
                  IsChecked="{Binding IsDeletedUser}"
                  Margin="0,5" HorizontalAlignment="Center"/>
        <!-- Таблица пользователей -->
        <DataGrid Grid.Row="0" Grid.RowSpan="12" Grid.Column="0" Grid.ColumnSpan="4" 
                  AutoGenerateColumns="False" 
                  SelectedItem="{Binding SelectedUser}" 
                  ItemsSource="{Binding Users.Users}"
                  Margin="10 30 10 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding SecondName}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Контакты" Binding="{Binding OtherContacts}"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Детали пользователя -->
        <ScrollViewer Grid.Row="0" Grid.RowSpan="8" Grid.Column="4" Grid.ColumnSpan="2"
              VerticalScrollBarVisibility="Auto"
              Margin="10">
            <StackPanel DataContext="{Binding UserDetails}">
                <TextBlock Text="Детальная информация:" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" Margin="0,5"/>
                <Separator/>

                <TextBlock Text="{Binding FirstName, StringFormat='Имя: {0}'}" Margin="0,5"/>
                <TextBlock Text="{Binding SecondName, StringFormat='Фамилия: {0}'}" Margin="0,5"/>
                <TextBlock Text="{Binding LastName, StringFormat='Отчество: {0}'}" Margin="0,5"/>
                <Separator/>

                <TextBlock Text="{Binding Email, StringFormat='Email: {0}'}" Margin="0,5"/>
                <TextBlock Text="{Binding OtherContacts, StringFormat='Контакты: {0}'}" Margin="0,5"/>
                <TextBlock Text="{Binding Type, StringFormat='Тип: {0}'}" Margin="0,5"/>
                <Separator/>

                <TextBlock Text="{Binding CreatedAt, StringFormat='Дата создания: {0:dd.MM.yyyy HH:mm}'}" Margin="0,5"/>
                <TextBlock Text="{Binding UpdatedAt, StringFormat='Дата обнавления: {0:dd.MM.yyyy HH:mm}'}" Margin="0,5"/>
                <TextBlock Text="{Binding DeletedAt, StringFormat='Дата удаления: {0:dd.MM.yyyy HH:mm}'}" Margin="0,5"/>
                <TextBlock Text="{Binding IsDeleted, StringFormat='Удален?: {0}'}" Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="12" Grid.ColumnSpan="4"
                    Orientation="Horizontal" >
            <Button Content="Добавить"
                    Command="{Binding CreateUserCommand}"
                    Margin="5"/>
            <Button Content="Обновить"
                    Command="{Binding UpdateUserCommand}"
                    Margin="5"/>
            <Button Content="Удалить мягко"
                    Command="{Binding SoftDeleteUserCommand}"
                    Margin="5"/>
            <Button Content="Удалить навсегда"
                    Command="{Binding HardDeleteUserCommand}"
                    Margin="5"/>
            <Button Content="Узнать детали"
                    Command="{Binding ShowUserDetailsCommand}"
                    Margin="5"/>
            <Button Content="Обновить список"
                    Command="{Binding UpdateDataCommand}"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Page>

<Window x:Class="REEP.WPF_Client.Frontend.Views.AuthViews.RegisterWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.AuthViews"
        xmlns:converters="clr-namespace:REEP.WPF_Client.Frontend.Common.Converters"
        mc:Ignorable="d"
        Title="RegisterWindowView" Height="450" Width="800">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="Имя" Margin="0,10,0,5"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Фамилия" Margin="0,10,0,5"/>
                <TextBox Text="{Binding SecondName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Отчество (необязательно)" Margin="0,10,0,5"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Email" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Контакты (необязательно)" Margin="0,10,0,5"/>
                <TextBox Text="{Binding OtherContacts, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Пароль" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Password}"/>

                <TextBlock Text="Подтвердите пароль" Margin="0,10,0,5"/>
                <TextBox Text="{Binding ConfirmPassword}"/>

                <Button Content="Зарегистрироваться" 
                        Command="{Binding RegisterCommand}"
                        Margin="0,20,0,0"
                        Height="30"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>

                <ProgressBar IsIndeterminate="True" 
                             Height="10"
                             Margin="0,10,0,0"
                             Visibility="{Binding IsLoading,
                             Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Margin="0,20,0,0">
                    <Hyperlink Command="{Binding SwitchToLoginCommand}">
                        Уже есть аккаунт? Войти
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>

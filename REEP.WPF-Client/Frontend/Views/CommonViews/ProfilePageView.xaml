<Page x:Class="REEP.WPF_Client.Frontend.Views.CommonViews.ProfilePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.CommonViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePageView">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Мой профиль" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0 0 0 20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Width="400">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

                    <TextBlock Text="Отчество:" Grid.Row="1" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.SecondName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="1" Grid.Column="1" Margin="0 0 0 10"/>

                    <TextBlock Text="Фамилия:" Grid.Row="2" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="2" Grid.Column="1" Margin="0 0 0 10"/>

                    <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="3" Grid.Column="1" Margin="0 0 0 10"/>

                    <TextBlock Text="Пароль:" Grid.Row="4" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                              Grid.Row="4" Grid.Column="1" Margin="0 0 0 10"/>

                    <TextBlock Text="Контакты:" Grid.Row="5" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.OtherContacts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="5" Grid.Column="1" Margin="0 0 0 10"/>

                    <TextBlock Text="Тип пользователя:" Grid.Row="6" Grid.Column="0" Margin="0 0 10 10"/>
                    <TextBox Text="{Binding UserDetails.Type, Mode=OneWay}" 
                             Grid.Row="6" Grid.Column="1" Margin="0 0 0 10" IsEnabled="False"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Обновить данные" 
                    Command="{Binding RefreshCommand}"
                    Margin="0 0 10 0"
                    Padding="15 5"/>

            <Button Content="Сохранить изменения" 
                    Command="{Binding SaveCommand}"
                    Padding="15 5"/>
        </StackPanel>
    </Grid>
</Page>

<Window x:Class="REEP.WPF_Client.Frontend.Views.CommonViews.CommonWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.CommonViews"
        mc:Ignorable="d"
        Title="CommonWindowView" Height="450" Width="800"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка приложения -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <Grid>
                <TextBlock Text="REEP System" 
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                     <Button Content="Профиль" 
                        Command="{Binding OpenProfileCommand}"
                        HorizontalAlignment="Right"
                        Padding="10 5" Margin="5"
                        Style="{StaticResource ModernButtonStyle}"/>
                <Button Content="Выход" 
                        Command="{Binding OpenExitCommand}"
                        HorizontalAlignment="Right"
                        Padding="10 5" Margin="5"
                        Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
               
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковая панель навигации -->
            <Border Grid.Column="0" Background="#FF252526">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding NavigationItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Title}"
                                        Command="{Binding DataContext.NavigateToCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding PageName}"
                                        Style="{StaticResource NavigationButtonStyle}"
                                        Margin="0 5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Область контента -->
            <Frame Grid.Column="1" 
                   Content="{Binding CurrentPage}"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>

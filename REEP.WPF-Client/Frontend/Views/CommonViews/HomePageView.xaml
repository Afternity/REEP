<Page x:Class="REEP.WPF_Client.Frontend.Views.CommonViews.HomePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:REEP.WPF_Client.Frontend.Views.CommonViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePageView">

    <Grid Background="#FFF5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                <!-- Приветствие -->
                <TextBlock Text="Добро пожаловать в систему REEP!"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FF333333"
                           Margin="0 0 0 20"/>

                <!-- Краткое описание -->
                <TextBlock Text="Ваш надежный инструмент для работы с документами"
                           FontSize="18"
                           Foreground="#FF555555"
                           Margin="0 0 0 30"/>

                <!-- Как это работает -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0 0 0 30"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD">
                    <StackPanel>
                        <TextBlock Text="Как работает система:"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#FF333333"
                                   Margin="0 0 0 15"/>

                        <StackPanel Margin="20 0 0 0">
                            <BulletDecorator Margin="0 0 0 10">
                                <BulletDecorator.Bullet>
                                    <Ellipse Width="6" Height="6" Fill="#FF444444"/>
                                </BulletDecorator.Bullet>
                                <TextBlock Text="Регистрация и авторизация в системе"
                                           FontSize="14"
                                           Foreground="#FF555555"/>
                            </BulletDecorator>

                            <BulletDecorator Margin="0 0 0 10">
                                <BulletDecorator.Bullet>
                                    <Ellipse Width="6" Height="6" Fill="#FF444444"/>
                                </BulletDecorator.Bullet>
                                <TextBlock Text="Создание и управление документами"
                                           FontSize="14"
                                           Foreground="#FF555555"/>
                            </BulletDecorator>

                            <BulletDecorator Margin="0 0 0 10">
                                <BulletDecorator.Bullet>
                                    <Ellipse Width="6" Height="6" Fill="#FF444444"/>
                                </BulletDecorator.Bullet>
                                <TextBlock Text="Отслеживание статусов документов"
                                           FontSize="14"
                                           Foreground="#FF555555"/>
                            </BulletDecorator>

                            <BulletDecorator>
                                <BulletDecorator.Bullet>
                                    <Ellipse Width="6" Height="6" Fill="#FF444444"/>
                                </BulletDecorator.Bullet>
                                <TextBlock Text="Безопасное хранение и передача данных"
                                           FontSize="14"
                                           Foreground="#FF555555"/>
                            </BulletDecorator>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Дополнительная информация -->
                <TextBlock Text="Для начала работы перейдите в нужный раздел через меню навигации."
                           FontSize="14"
                           FontStyle="Italic"
                           Foreground="#FF666666"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
